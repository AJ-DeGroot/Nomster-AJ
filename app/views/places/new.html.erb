<meta name="viewport" content="width=device-width, initial-scale=1.0">

<div class="booyah-box col-10 offset-1">
  <h1>Enter Details</h1>
  <%= simple_form_for @place do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %><br />
    <%= f.submit 'Create', class: 'btn btn-primary form-btn' %>
  <% end %>
</div>